<mvc:View viewName="sap.ui.demo.walkthrough.Intro" xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">
    <Panel width="auto" headerText="{i18n>PanelText}" class="sapUiResponsiveMargin">
        <content>
            <Input value="{/user/name}" description="Hello, {/user/name}!" maxLength="15" valueLiveUpdate="true"></Input>
        </content>
    </Panel>
    <Panel width="auto" headerText="{i18n>PanelSecondText}" class="sapUiResponsiveMargin">
        <content>
            <Button text="{i18n>HiButtonText}" press=".onSayHi"></Button>
            <Button text="{i18n>BueButtonText}" press=".onSayBue"></Button>
        </content>
    </Panel>

</mvc:View>