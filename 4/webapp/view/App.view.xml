<mvc:View xmlns:appfinder="sap.ushell.ui.appfinder"
    controllerName="sap.ui.demo.walkthrough.controller.App"
    xmlns="sap.m"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc">
    <App>
        <Page 
            title="{i18n>PageTitle}">
            <content>
            <HBox justifyContent="Center">
                <Panel 
                    width="99%"
                    headerText="{i18n>PanelText}">
                    <content>
                        <Input 
                            value="{/user/name}"
                            description="Hello, {/user/name}!"
                            valueLiveUpdate="true">
                        </Input>
                    </content>
                </Panel>
                <Panel 
                    width="99%"
                    headerText="{i18n>PanelSecondText}">
                    <content>
                        <Button
                            text="{i18n>HiButtonText}"
                            press=".onSayHi">
                        </Button>
                        <Button
                            text="{i18n>BueButtonText}"
                            press=".onSayBue">
                        </Button>
                    </content>
                </Panel>
                </HBox>
            </content>    
        </Page>
    </App>
</mvc:View>