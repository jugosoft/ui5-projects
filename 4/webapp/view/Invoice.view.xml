<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc">

    <List headerText="{i18n>invoiceTitle}" width="100%" items="{invoices>/Invoices}">
        <items>
            <ObjectListItem 
                title="{invoices>ProductName}"
                number="{
                    parts: [{path: 'invoices>ExtendedPrice'}, {path: 'view>/currency'}],
                    type: 'sap.ui.model.type.Currency',
                    formatOptions: {
                        showMeasure: true
                    }
                }"
                numberUnit="{view>/currency}">
                <ObjectAttribute text="Quantity = {invoices>Quantity}" />
                <ObjectAttribute text="Producer - {invoices>ShipperName}" />
            </ObjectListItem>
        </items>
    </List>

</mvc:View>